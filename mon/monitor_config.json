{
    "target_path": "/opt/app/bin/node/monitor.sh",
    "cluster": {
        "roles": [
            "es_master_node",
            "es_node",
            "es_node_2",
            "es_node_3"
        ],
        "cmd": "/usr/bin/bash /opt/app/bin/node/monitor.sh cluster",
        "interval": 10,
        "timeout": 20
    },
    "nodes": {
        "roles": [
            "es_master_node",
            "es_node",
            "es_node_2",
            "es_node_3"
        ],
        "cmd": "/usr/bin/bash /opt/app/bin/node/monitor.sh node",
        "interval": 10,
        "timeout": 20
    },
    "items": {
        "cluster_health": {
            "level": 9,
            "unit": "",
            "zh": "集群健康状态",
            "value_type": "int",
            "statistics_type": "latest",
            "min": 0,
            "max": 0,
            "suggest": {
                "=0": {
                    "level": 5,
                    "msg": "集群健康"
                },
                "=1": {
                    "level": 5,
                    "msg": "部分从节点不健康，不影响集群运行，但影响高可用"
                },
                "=2": {
                    "level": 5,
                    "msg": "集群无法使用，需要联系管理员"
                }
            }
        },
        "os_cluster_shards_number_unassigned": {
            "value_type": "int",
            "statistics_type": "latest",
            "zh": "未分配的分片数",
            "unit": "",
            "level": 9
        },
        "node_health": {
            "level": 9,
            "unit": "",
            "zh": "节点健康状态",
            "value_type": "int",
            "statistics_type": "latest",
            "min": 0,
            "max": 0,
            "suggest": {
                "=0": {
                    "level": 5,
                    "msg": "节点健康"
                },
                "=1": {
                    "level": 5,
                    "msg": "节点主从延迟过高"
                },
                "=2": {
                    "level": 5,
                    "msg": "节点无法使用，需要联系管理员"
                }
            }
        },
        "os_jvm_mem_heap_used_percent": {
            "value_type": "int",
            "statistics_type": "latest",
            "zh": "jvm heap 使用百分比",
            "unit": "%",
            "level": 9
        },
        "os_jvm_threads_number": {
            "value_type": "int",
            "statistics_type": "latest",
            "zh": "jvm 线程数",
            "unit": "",
            "level": 9
        }
    },
    "item_groups": {
        "cluster": {
            "items": [
                "cluster_health",
                "os_cluster_shards_number_unassigned"
            ],
            "alarms": []
        },
        "roles": [
            {
                "role": "es_master_node",
                "items": [
                    "os_jvm_mem_heap_used_percent",
                    "os_jvm_threads_number",
                    "node_health"
                ],
                "alarms": []
            },
            {
                "role": "es_node",
                "items": [
                    "os_jvm_mem_heap_used_percent",
                    "os_jvm_threads_number",
                    "node_health"
                ],
                "alarms": []
            }
        ]
    }
}